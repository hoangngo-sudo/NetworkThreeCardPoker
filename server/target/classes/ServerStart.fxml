<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700" prefWidth="1000" styleClass="start-root" stylesheets="@server.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServerStartController">
    
    <Text styleClass="title" text="THREE CARD POKER SERVER" /> 
    <Text styleClass="subtitle" text="Configure and Start Server" />
    
    <VBox styleClass="port-container">
        <HBox styleClass="config-box">
            <TextField fx:id="portField" alignment="CENTER" promptText="Enter port (default: 5555)" styleClass="text-field" />
        </HBox>
        <Button fx:id="startButton" onAction="#handleStartServer" styleClass="start-button" text="Start Server" />
    </VBox>
    
</VBox>
